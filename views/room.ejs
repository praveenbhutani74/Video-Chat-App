        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <style>

          /* *{
            overflow: auto;
            box-sizing: border-box;
          } */
          body{
            margin: 0;
        
          }
            #video-grid {
             
              display: grid;
              grid-template-columns: repeat(auto-fill, 300px);
              grid-auto-rows: 300px;
              column-gap: 20px;
             
              row-gap: 20px;
              margin: 10px;
              padding-top: 30px;
            }
            
            video {
              width: 100%;
              height: 100%;
              object-fit: cover;
            }

      label{
            position: absolute;
            width: 45px;
            height: 22px;
            right: 20px;
            top: 20px;
            border: 2px solid;
            border-radius: 20px;
        }
        label:before{
            position: absolute;
            content: '';
            width:20px;
            height: 20px;
            left: 1px;
            top: 1px;
            border-radius: 50%;
            background: #000;
            cursor: pointer;
            transition: 0.4s;
        }
        label.active:before{
            left: 24px;
            background: #fff;
        }
        body.night{
            background: #000;
            color: #fff;
        }
        
        .main{
          height: 100vh;
          width: 100vw;
          display: flex;
          /* background-color: black; */
         
        }
        .left{
          height: 100%;
          width: 100%;
        }
        #right{
          width: 20%;
          height: 84%;
          /* background-color: tomato; */
          position: absolute;
          top: 6.5%;
          right: 0%;
          border-bottom-left-radius: 10px;
          border-top-left-radius: 10px;
          border-top-right-radius: 20px;
          display: none;
          border: 2px solid lightgrey
        }
        #Bottom{
          width: 100%;
          height: 9%;
          background-color: black;
          position: absolute;
          bottom: 0%;
          overflow: hidden;
          display: flex;
          align-items: center;

        }
     
       
        #end{


         display: flex;
          justify-content: flex-end;
          position: absolute;
        right:0%;
          align-items: center;
          /* margin-top: -20px; */
        
        }
        .chat-input{

          position: absolute;
          bottom: 3%;
          height: 2.5%;
          width: 85%;
          /* display: flex;
          justify-content: center;
          align-items: center; */
          border-radius: 50px;
          left: 5%;
          outline: none;
    border: none;
      font-size: 1rem;
    padding: 10px;
    background-color: lightgrey;
    
        }
      
        .chat {
    color: black;
    min-height: 30px;
    /* border-radius: 10px; */
    padding: 4px;
    /* margin-top: 5px; */
    width: 50px;
    clear: both;
    /* margin-left: 5px; */
    word-break: break-all;
    font-size: 1.15rem;
}

        .right-div {
      /* background: #9b59b6; */
    display: flex;
    align-items: center;
    float: right;
}
#Audio-video{
          display: flex;
         justify-content: flex-start;
          align-items: center;
         align-content: center;
          width: 33%;
          height: 100%;

    
         /* overflow: auto; */
        

        }
        .Stop-video{
          display: flex;
          flex-direction: column-reverse;
          color: #fff;
          font-size: 36px;
          align-items: center;
          padding: 15px;
          opacity: 0.8;
        }
        .Stop-audio{
          display: flex;
          flex-direction: column-reverse;

          color: #fff;
          font-size: 36px;
          align-items: center;
          padding: 20px;
          opacity: 0.8;
        }
        .Stop-audio:hover{
          background-color:rgb(121, 115, 115);
          opacity: 1;
          border: 3px dotted #ff7a59;

        transition: all 0.4s ease 0s;
        }
        .Stop-video:hover{
          background-color:rgb(121, 115, 115);
          opacity: 1;
          border: 3px dotted #ff7a59;

        transition: all 0.4s ease 0s;
        }
        .Stop-audio i{

          margin-left: 2px;
        }


.inside-stop{
  position: absolute;
  margin-left: 8px;
  margin-top: -7px;
}
.hide{
  display: none;
}

.Stop{

  font-size: 0.9rem;
 
}
.Stop-Audio{

  font-size: 0.8rem;


}
#middle{
          display: flex;
          justify-content: space-evenly; 
           align-items: center; 
           width: 33%;
           height: 100%;

        }

        #chat-btn {

          color: rgb(180, 176, 176);
          display: flex;
          justify-content: center;
          align-items: center;
          font-size: 35px;
          width: 13.6%;
          height: 100%;
          opacity: 0.8;
        }

        #chat-btn:hover{

          background-color:rgb(121, 115, 115);
          border: 3px dotted #ff7a59;
          opacity: 1;
        transition: all 0.4s ease 0s;
        }
           </style>
</head>

<body>
  <header>
    <label  id="dark-change"></label>
  </header>
  <div class="main">
  <div class="left">
    <div id="video-grid"></div>
    
    <div id="Bottom">

      
        

      
      <div id="Audio-video" > 

        <div  class="Stop-audio"> 
          <span class="Stop">Mute</span>
          <i class="fas fa-microphone"></i>
          </div>

      

        <div  class="Stop-video"> 
          <span class="Stop">Stop Video</span>
          <i class="fas fa-video"></i>
          </div>
       
        </div>
     
   
    <div id="middle">
      <div id="chat-btn">
        <i class="fas fa-comment-alt"></i>
      </div>
    </div>
    <div id="end">
     <button id="leave">Leave</button>
     
    </div>
    </div>
    
         
        
          </div>
          <div id="right">

            <div>
              <h3 style="text-align: center;"> In-call messages</h3>
            </div>
            <div class="chat-window">
            </div>
            <div class="chat-input-box">
                <input type="text" class="chat-input" placeholder="Send a message to everyone">
            </div>
        </div>
          </div>
        </div>
      </div>

